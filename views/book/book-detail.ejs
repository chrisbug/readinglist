<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/book.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="centered">
            <h1 class="book__title"><%= book.title %> By  <%= book.author %></h1>
            <p class="book__isbn">ISBN: <%= book.isbn %></p>
            <hr>
            <div class="image">
                <img src="<%= book.imageUrl %>" alt="<%= book.title %>">
            </div>
            <hr>
            <h3 class="book__genre"> Genre: <%= book.genre %></h3>
            <p class="book__blurb"><%= book.blurb %></p>
            <hr>
            <%- include('../includes/add-to-reading.ejs', {book: book}) %>
            <div class="card__actions">
                <a href="/admin/edit-book/<%= book._id %>?edit=true" class="btn">Edit</a>
                <form action="/admin/delete-book" method="POST">
                    <input type="hidden" value="<%= book._id %>" name="bookId">
                    <button class="btn" type="submit">Delete</button>
                </form>

            </div>
        </main>
        <%- include('../includes/end.ejs') %>